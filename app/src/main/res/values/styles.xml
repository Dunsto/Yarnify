<!-- ***************************************************************************************
* Title: How do I change the text style of a spinner?
* Author: Joshua Pinter
* Date: January 16, 2014
* Code version: xml
* Availability: https://stackoverflow.com/questions/3205387/how-do-i-change-the-text-style-of-a-spinner
*
*************************************************************************************** -->

<resources>
    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >24dp</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textStyle" >bold</item>
    </style>

    <style name="SmallRadioButtonStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:radius">32dp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

</resources>